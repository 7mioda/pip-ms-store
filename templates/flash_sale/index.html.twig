<!DOCTYPE html>

<title>FlashSale index</title>

{% block body %}
    <h1>FlashSale index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BeginDate</th>
                <th>EndDate</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for flash_sale in flash_sales %}
            <tr>
                <td>{{ flash_sale.id }}</td>
                <td>{{ flash_sale.BeginDate ? flash_sale.BeginDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ flash_sale.endDate ? flash_sale.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ flash_sale.price }}</td>
                <td>
                    <a href="{{ path('flash_sale_show', {'id': flash_sale.id}) }}">show</a>
                    <a href="{{ path('flash_sale_edit', {'id': flash_sale.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('flash_sale_new') }}">Create new</a>
{% endblock %}
